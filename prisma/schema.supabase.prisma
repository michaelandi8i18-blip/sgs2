// Prisma schema untuk Supabase PostgreSQL
// Gunakan file ini untuk koneksi ke Supabase

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL") // Opsional, untuk migration
}

// User model for authentication (both admin and clerk)
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  role      String   @default("clerk") // "admin" or "clerk"
  divisionId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  division  Division? @relation(fields: [divisionId], references: [id])
}

// Division model
model Division {
  id        String   @id @default(cuid())
  code      String   @unique // 1, 2, 3
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  users     User[]
  foremen   Foreman[]
  groundCheckTasks GroundCheckTask[]
}

// Foreman model (Kemandoran)
model Foreman {
  id        String   @id @default(cuid())
  code      String   // A, B, C
  name      String
  divisionId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([divisionId]) // Index untuk performa query
  division  Division  @relation(fields: [divisionId], references: [id])
  groundCheckTasks GroundCheckTask[]
}

// Ground Check Task
model GroundCheckTask {
  id           String   @id @default(cuid())
  clerkName    String
  divisionId   String
  foremanId    String
  notes        String?  @db.Text // NB field for harvester names - using Text for longer content
  status       String   @default("draft") // draft, saved
  createdBy    String
  signature    String?  @db.Text // Base64 signature image - using Text for large base64
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([divisionId]) // Index untuk performa query
  @@index([foremanId])
  @@index([createdAt])
  division     Division  @relation(fields: [divisionId], references: [id])
  foreman      Foreman   @relation(fields: [foremanId], references: [id])
  attachments  Attachment[]
}

// Attachment model for TPH photos
model Attachment {
  id              String   @id @default(cuid())
  taskId          String
  tphNumber       Int      // TPH 1, TPH 2, etc.
  photoData       String   @db.Text // Base64 image data - using Text for large base64
  createdAt       DateTime @default(now())
  
  @@index([taskId])
  task            GroundCheckTask @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

// Sync queue for offline/online sync
model SyncQueue {
  id        String   @id @default(cuid())
  action    String   // create, update, delete
  entity    String   // GroundCheckTask, Attachment, etc.
  data      String   @db.Text // JSON data
  synced    Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([synced])
}
